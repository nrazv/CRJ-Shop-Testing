@page
@using Microsoft.AspNetCore.Authorization
@model CRJ_Shop.Pages.Products.DeleteModel
@attribute [Authorize(Roles = "Admin")]

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h5 class="fst-italic">Are you sure you want to delete this?</h5>
<div class="my-4">
    <table class="table">
        <thead>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Category</th>
        <th>Image</th>
        </thead>
        <tbody>
        <tr>
            <td>@Model.Product.Name</td>
            <td>@Model.Product.Description</td>
            <td>@Model.Product.Price</td>
                <td>@Model.Product.ProductCategories</td>
            <td>@Model.Product.Image</td>
        </tr>
        </tbody>
    </table>
   
    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-success" asp-page="./Index">Cancel</a>
    </form>
</div>
