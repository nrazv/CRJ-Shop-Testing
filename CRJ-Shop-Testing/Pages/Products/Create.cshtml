@page
@using CRJ_Shop.Models
@using Microsoft.AspNetCore.Authorization
@model CRJ_Shop.Pages.Products.CreateModel

@attribute [Authorize(Roles = "Admin")]

@{
ViewData["Title"] = "Create";
}

<h1 class="text-center">Create</h1>

<h5 class="fst-italic text-center mb-4">Enter values to create a new product</h5>
<div class="row">
    <div class="col-md-4 mx-auto">
        <form method="post" class="d-flex flex-column gap-2" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="Product.Title" hidden class="form-control" />

            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" type="number" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SelectedCategory" class="control-label"></label>
                <select asp-for="SelectedCategory" asp-items="Model.CategorySelectList" class="form-control">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="SelectedCategory" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Image" class="control-label"></label>
                <input asp-for="Product.Image" class="form-control" type="text" />
                <span asp-validation-for="Product.Image" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-success" />
                <a class="btn btn-danger" asp-page="./Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}