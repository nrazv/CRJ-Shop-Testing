@page
@using Microsoft.AspNetCore.Authorization
@model CRJ_Shop.Pages.Products.EditModel
@attribute [Authorize(Roles = "Admin")]

@{
    ViewData["Title"] = "Edit";
}
<div class="my-4 text-center">
    <h1>Edit</h1>
    <h5 class="fst-italic">Edit your product by changing values</h5>
</div>

<div class="row mb-4 ">
    <div class="col-md-4 mx-auto">
        <form method="post" class="d-flex flex-column gap-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Title" class="control-label"></label>
                <input asp-for="Product.Title" class="form-control" />
                <span asp-validation-for="Product.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedCategory" class="control-label">Category</label>
                <select asp-for="SelectedCategory" asp-items="Model.CategorySelectList" class="form-select">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="SelectedCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Image" class="control-label"></label>
                <input asp-for="Product.Image" class="form-control" type="text" />
                <span asp-validation-for="Product.Image" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-success" />
                <a class="btn btn-danger" asp-page="./Index">Cancel</a>
            </div>
            <div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
